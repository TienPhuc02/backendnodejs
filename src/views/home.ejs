<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">Create User</a>
    </div>
    <div class="table">
      <div class="create-title">List User</div>
      <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>City</th>
          <th>Action</th>
        </tr>
        <% JSON.parse(JSON.stringify(listUsers)).map((elem) => { %>
        <tr>
          <td><%= elem._id %></td>
          <td><%= elem.name %></td>
          <td><%= elem.email %></td>
          <td><%= elem.city %></td>
          <td>
            <form action="/delete-user/<%= elem._id %>" method="POST">
              <button>delete</button>
            </form>
            <button><a href="/update/<%= elem._id %>">update</a></button>
          </td>
        </tr>
        <% }); %>
      </table>
    </div>
  </body>
</html>
